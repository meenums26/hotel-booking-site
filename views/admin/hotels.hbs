<div class="col-md-10 main">
  <div class="container">
    <div class="row mt-5 mb-5">
      <span>Hotels</span>
    </div>
    <div class="row mb-3"><a href="/admin/addHotel" class="btn btn-primary ml-auto">Add Hotel</a></div>
    <div class="row justify-content-center">
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Hotel Name</th>
            <th scope="col">Hotel Location</th>
            <th scope="col">Hotel Star</th>
            <th scope="col">Hotel Joined</th>
            <th scope="col">Hotel Contact</th>
            <th scope="col">Options</th>
          </tr>
        </thead>
        <tbody>
          {{#each hotels}}
          <tr>
            <th scope="row">{{this._id}}</th>
            <td>{{this.hotelname}}</td>
            <td>{{this.place}}</td>
            <td>{{this.hotelstar}}</td>
            <td>{{this.joinDate}}</td>
            <td>{{this.contact}}</td>
            <td><a href="#" class="btn btn-success mr-3">Edit</a><a href="#" class="btn btn-danger">Delete</a></td>
          </tr>
{{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>